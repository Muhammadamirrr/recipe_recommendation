<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-md-6">
      <h3>Create Account</h3>
      <%= form_with model: @user, url: users_path, class: 'mt-5' do |form| %>
        <%= form.label :username %>
        <%= form.text_field :username, class: 'form-control', required: true %>

        <%= form.label :email %>
        <%= form.email_field :email, class: 'form-control', required: true %>

        <%= form.label :password %>
        <%= form.password_field :password, class: 'form-control', required: true %>

        <%= form.label :password_confirmation %>
        <%= form.password_field :password_confirmation, class: 'form-control', required: true %>

        <%= form.submit 'Register', class: 'btn btn-primary mt-3' %>
      <% end %>

      <% if @user.errors.any? %>
        <div class="alert alert-danger mt-3">
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
</div>
