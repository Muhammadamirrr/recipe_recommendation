<div class="container mt-5">
  <div class="row mb-5">
    <div class="col-4">
      <h2>Recipes</h2>
    </div>
    <div class="col-8">
      <%= form_with(url: recipes_path, method: :get, class: 'form-inline mt-3') do |form| %>
        <div class="row d-flex">
          <div class="col-8"><%= form.text_field :query, placeholder: 'Search recipes', class: 'form-control mr-sm-2' %></div>
          <div class="col-4"><%= form.submit 'Search', class: 'btn btn-outline-primary my-2 my-sm-0' %></div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <% @recipes.each do |recipe| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <img src="<%= recipe['image'] %>" class="card-img-top" alt="<%= recipe['title'] %>">
          <div class="card-body">
            <h5 class="card-title"><%= recipe['title'] %></h5>
            <%= link_to 'View Recipe', recipe_path(recipe['id']), class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
