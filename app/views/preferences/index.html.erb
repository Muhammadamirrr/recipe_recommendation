<div class="container mt-5">
  <div class="row justify-content-center">
    <% if @preference.errors.any? %>
      <div class="alert alert-danger">
        <h4><%= pluralize(@preference.errors.count, 'error') %> prohibited this preference from being saved:</h4>
        <ul>
          <% @preference.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="col-md-6">
      <%= form_with model: @preference, url: preference_path(@preference), method: :patch, class: 'border p-4 rounded' do |form| %>
        <h2 class="mb-4">Update Preferences</h2>

        <div class="form-check">
          <%= form.label :vegetarian, class: 'form-check-label' %>
          <%= form.check_box :vegetarian, class: 'form-check-input' %>
        </div>

        <div class="form-check">
          <%= form.label :vegan, class: 'form-check-label' %>
          <%= form.check_box :vegan, class: 'form-check-input' %>
        </div>

        <div class="form-check">
          <%= form.label :gluten_free, class: 'form-check-label' %>
          <%= form.check_box :gluten_free, class: 'form-check-input' %>
        </div>

        <%= form.submit 'Update Preferences', class: 'btn btn-primary mt-3' %>
      <% end %>
    </div>
  </div>
</div>
